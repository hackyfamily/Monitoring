    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script src="http://code.highcharts.com/modules/exporting.js"></script>
    <script type="text/javascript">
        var chart;

        $(function () {
            chart = $('#container').highcharts({
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    events: {
                        load: requestData
                    }
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                },
                xAxis: {
                    categories: ['-3 Min', '-2 Min', '-1 Min', 'Now']
                },
                yAxis: {
                    title: {
                        text: ''
                    }
                },
                plotOptions: {
                    line: {
                        dataLabels: {
                            enabled: true
                        },
                        enableMouseTracking: false
                    }
                },
                series: [{
                    name: 'Heart Rate',
                    data: []
                }]
            });
        });

        function requestData() {
            $.ajax({
                url: '@Url.Action("Data")',
                success: function (point) {
                    var series = chart.highcharts().series[0],
                        shift = series.data.length > 20;
                    
                    var points = chart.highcharts().series[0].points;

                    for (var i = 0; i < points.length; i++) {
                        points[i].remove();
                    }

                    chart.highcharts().series[0].setData(point);

                    setTimeout(requestData, 4000);
                },
                cache: false
            });
        }
    </script>
    
    <style type="text/css">
        .highcharts-container > svg > text {
            display: none;
        }
        .highcharts-legend {
            display: none;
        }
    </style>
}


